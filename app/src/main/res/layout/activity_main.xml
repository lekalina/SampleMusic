<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.music.sample.samplemusic.MainActivity">


    <RelativeLayout
        android:background="@color/app_title_bar_background"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="56dp">

        <EditText
            android:id="@+id/search_text"
            android:hint="@string/search_hint"
            android:layout_marginLeft="20dp"
            android:textColorHighlight="@color/app_accent_color"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/search_button"
            android:text="@string/search_button_text"
            android:layout_marginRight="20dp"
            android:background="@color/app_accent_color"
            android:layout_alignParentEnd="true"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/result_list"
            android:divider="@null"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/search_result_error"
            android:text="@string/welcome_message"
            android:textColor="@color/app_text_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>
